        <TextBox x:Name="Topic" GotFocus="Topic_GotFocus" LostFocus="Topic_LostFocus" Style="{StaticResource For_TextBox}" HorizontalAlignment="Left" Height="80" Margin="11.8,0,0,14.2" Grid.Row="2" TextWrapping="NoWrap" Text="тема" VerticalAlignment="Bottom" Width="405" Grid.Column="1" ></TextBox>



