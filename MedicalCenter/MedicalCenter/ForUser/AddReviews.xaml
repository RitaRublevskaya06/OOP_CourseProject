        <TextBlock TextWrapping="Wrap" Style="{StaticResource Textgrey}" Grid.Column="1" Margin="61.8,10.2,60,0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Text="Спасибо, за ваш честный отзыв" Height="66" Width="307"/>
